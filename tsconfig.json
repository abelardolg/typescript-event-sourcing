{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "lib": [ "es2015" ],
        "sourceMap": true,
        "rootDir": ".",
        "types": [ "node" ],
        "baseUrl": "src",
        "paths": {
            "application/*": [ "application/*" ],
            "domain/*": [ "domain/*" ],
            "infra/*": [ "infra/*" ],
            "ui/*": [ "UI/*" ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}